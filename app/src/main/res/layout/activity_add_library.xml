<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddLibraryActivity">

    <ImageView
        android:id="@+id/imageViewAddLibraryBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.3"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/login_background" />

    <TextView
        android:id="@+id/textViewAddLibraryNamePrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="92dp"
        android:text="Please enter the name of the library:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextAddLibraryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Enter library name here"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/textViewAddLibraryNamePrompt"
        app:layout_constraintTop_toBottomOf="@+id/textViewAddLibraryNamePrompt" />

    <TextView
        android:id="@+id/textViewAddLibraryLatPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Please enter the latitude of this library:"
        app:layout_constraintStart_toStartOf="@+id/textViewAddLibraryNamePrompt"
        app:layout_constraintTop_toBottomOf="@+id/editTextAddLibraryName" />

    <EditText
        android:id="@+id/editTextAddLibraryLat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Enter latitude here"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/textViewAddLibraryLatPrompt"
        app:layout_constraintTop_toBottomOf="@+id/textViewAddLibraryLatPrompt" />

    <TextView
        android:id="@+id/textViewAddLibraryLongPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Please enter the longitude of this library:"
        app:layout_constraintStart_toStartOf="@+id/textViewAddLibraryLatPrompt"
        app:layout_constraintTop_toBottomOf="@+id/editTextAddLibraryLat" />

    <EditText
        android:id="@+id/editTextAddLibraryLong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Enter longitude here"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/textViewAddLibraryLongPrompt"
        app:layout_constraintTop_toBottomOf="@+id/textViewAddLibraryLongPrompt" />

    <TextView
        android:id="@+id/textViewAddLibraryWelcomePrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="46dp"
        android:text="Please enter the welcome message for this library:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextAddLibraryLong" />

    <TextView
        android:id="@+id/textViewAddLibraryWelcomePrompt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="46dp"
        android:text="Please enter the welcome message for this library:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextAddLibraryLong" />

    <EditText
        android:id="@+id/editTextAddLibraryWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Enter welcome message here"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/editTextAddLibraryLong"
        app:layout_constraintTop_toBottomOf="@+id/textViewAddLibraryWelcomePrompt" />

    <Button
        android:id="@+id/buttonAddLibrary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="144dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="144dp"
        android:text="Add a Library"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextAddLibraryBookGenres" />

    <TextView
        android:id="@+id/textViewAddLibraryBookGenres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Please enter the genre of books in the library"
        app:layout_constraintEnd_toEndOf="@+id/imageViewAddLibraryBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextAddLibraryWelcome" />

    <EditText
        android:id="@+id/editTextAddLibraryBookGenres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Enter genres here"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@id/editTextAddLibraryWelcome"
        app:layout_constraintTop_toBottomOf="@id/textViewAddLibraryBookGenres"
        tools:layout_constraintTop_toBottomOf="@id/editTextAddLibraryWelcome" />
</androidx.constraintlayout.widget.ConstraintLayout>